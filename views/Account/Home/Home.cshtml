@model List<LuginaTicket.Models.Movie>
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="relative bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h1 class="text-4xl font-extrabold sm:text-5xl md:text-6xl">
                Welcome to LuginaTicket
            </h1>
            <p class="mt-3 max-w-md mx-auto text-base sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
                Book your movie tickets online. Experience the magic of cinema from the comfort of your home.
            </p>
            <div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8">
                <div class="rounded-md shadow">
                    <a href="/Movies" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-600 bg-white hover:bg-indigo-50 md:py-4 md:text-lg md:px-10">
                        Browse Movies
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Movies Section -->
<section class="py-12 bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                Now Showing
            </h2>
            <p class="mt-4 text-lg text-gray-500">
                Check out our latest movies
            </p>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="mt-10 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
                @foreach (var movie in Model)
                {
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                        <img src="@movie.ImageUrl" alt="@movie.Title" class="w-full h-64 object-cover">
                        <div class="p-6">
                            <h3 class="text-xl font-semibold text-gray-900 mb-2">@movie.Title</h3>
                            <p class="text-gray-600 text-sm mb-4 line-clamp-2">@movie.Description</p>
                            <div class="flex items-center justify-between">
                                <span class="text-sm text-gray-500">@movie.Genre</span>
                                <a href="/Movies/Details/@movie.Id" class="bg-indigo-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-indigo-700">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <p class="text-gray-500">No movies available at the moment.</p>
            </div>
        }

        <div class="mt-10 text-center">
            <a href="/Movies" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                View All Movies
            </a>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="bg-indigo-700 py-12">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h2 class="text-3xl font-extrabold text-white">
                Ready to book your tickets?
            </h2>
            <p class="mt-4 text-lg text-indigo-200">
                Join thousands of movie lovers who book with us every day.
            </p>
            <div class="mt-8">
                <a href="/Movies" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-indigo-600 bg-white hover:bg-indigo-50">
                    Get Started
                </a>
            </div>
        </div>
    </div>
</section>

