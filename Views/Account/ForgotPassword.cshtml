@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_Layout";
}

<div class="min-h-screen flex items-center justify-center py-12 px-4">
    <div class="max-w-md w-full">
        <div class="bg-gray-800 rounded-lg p-8">
            <h2 class="text-3xl font-bold mb-4">Forgot Password</h2>
            <p class="text-gray-400 mb-6">We will email you a link to reset your password.</p>
            <form asp-action="ForgotPassword" method="post">
                <div class="mb-4">
                    <label asp-for="Email" class="block text-sm font-medium mb-2">Email Address</label>
                    <input asp-for="Email" type="email" class="w-full bg-gray-700 border border-gray-600 rounded px-4 py-2 text-white" placeholder="Enter your Email Address" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>
                <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-3 rounded-lg">
                    Send Email â†’
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

