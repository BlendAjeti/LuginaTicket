@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_Layout";
}

<div class="min-h-screen flex items-center justify-center py-12 px-4">
    <div class="max-w-md w-full">
        <div class="bg-gray-800 rounded-lg p-8">
            <h2 class="text-3xl font-bold mb-6">Reset Password</h2>
            <form asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="Token" />
                <div class="mb-4">
                    <label asp-for="Password" class="block text-sm font-medium mb-2">New Password</label>
                    <input asp-for="Password" type="password" class="w-full bg-gray-700 border border-gray-600 rounded px-4 py-2 text-white" />
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium mb-2">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="w-full bg-gray-700 border border-gray-600 rounded px-4 py-2 text-white" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
                </div>
                <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-3 rounded-lg">
                    Reset Password
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

