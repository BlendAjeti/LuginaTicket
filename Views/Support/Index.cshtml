@model ContactViewModel
@{
    ViewData["Title"] = "Support";
}

<div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">Contact Us</h1>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-6 p-4 bg-green-900/20 border border-green-600 rounded-lg">
            <p class="text-green-400">@TempData["SuccessMessage"]</p>
        </div>
    }

    <div class="bg-gray-800 rounded-lg p-8">
        <p class="text-gray-300 mb-6">
            Have a question or need help? Fill out the form below and we'll get back to you as soon as possible.
        </p>

        <form asp-action="Contact" method="post" class="space-y-6">
            @Html.AntiForgeryToken()
            
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="mb-4 p-3 bg-red-900/20 border border-red-600 rounded">
                    <div asp-validation-summary="All" class="text-red-400 text-sm"></div>
                </div>
            }

            <div>
                <label asp-for="Name" class="block text-sm font-medium mb-2 text-white">Name</label>
                <input asp-for="Name" class="w-full bg-gray-700 border border-gray-600 rounded px-4 py-2 text-white" placeholder="Your name" required />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium mb-2 text-white">Email</label>
                <input asp-for="Email" type="email" class="w-full bg-gray-700 border border-gray-600 rounded px-4 py-2 text-white" placeholder="your.email@example.com" required />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Subject" class="block text-sm font-medium mb-2 text-white">Subject</label>
                <input asp-for="Subject" class="w-full bg-gray-700 border border-gray-600 rounded px-4 py-2 text-white" placeholder="What is this regarding?" required />
                <span asp-validation-for="Subject" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Message" class="block text-sm font-medium mb-2 text-white">Message</label>
                <textarea asp-for="Message" rows="6" class="w-full bg-gray-700 border border-gray-600 rounded px-4 py-2 text-white" placeholder="Tell us how we can help you..." required></textarea>
                <span asp-validation-for="Message" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex gap-4">
                <button type="submit" class="bg-red-600 hover:bg-red-700 px-6 py-2 rounded text-white font-semibold">
                    Send Message
                </button>
                <a href="/" class="bg-gray-700 hover:bg-gray-600 px-6 py-2 rounded text-white font-semibold">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
