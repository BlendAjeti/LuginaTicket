@model Ticket
@{
    ViewData["Title"] = "Edit Ticket";
}

<h1 class="text-3xl font-bold mb-6">Edit Ticket</h1>

<form asp-action="Edit" method="post" class="bg-gray-800 rounded-lg p-6 max-w-2xl">
    <input type="hidden" asp-for="Id" />
    <div class="mb-4">
        <label asp-for="Status" class="block text-sm font-medium mb-2">Status</label>
        <select asp-for="Status" class="w-full bg-gray-700 border border-gray-600 rounded px-4 py-2">
            @foreach (TicketStatus status in Enum.GetValues(typeof(TicketStatus)))
            {
                <option value="@status" selected="@(Model.Status == status)">@status</option>
            }
        </select>
        <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
    </div>
    <div class="mb-4">
        <label asp-for="Price" class="block text-sm font-medium mb-2">Price</label>
        <input asp-for="Price" type="number" step="0.01" class="w-full bg-gray-700 border border-gray-600 rounded px-4 py-2" />
        <span asp-validation-for="Price" class="text-red-500 text-sm"></span>
    </div>
    <div class="flex gap-4">
        <button type="submit" class="bg-red-600 hover:bg-red-700 px-6 py-2 rounded">Save</button>
        <a href="/Admin/Tickets" class="bg-gray-700 hover:bg-gray-600 px-6 py-2 rounded">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

