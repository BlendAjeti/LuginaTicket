@model CinemaHall
@{
    ViewData["Title"] = "Delete Cinema Hall";
}

<h1 class="text-3xl font-bold mb-6">Delete Cinema Hall</h1>

<div class="bg-gray-800 rounded-lg p-6 max-w-2xl">
    <h3 class="text-xl font-bold mb-4 text-red-600">Are you sure you want to delete this cinema hall?</h3>
    
    <dl class="grid grid-cols-2 gap-4 mb-6">
        <dt class="text-gray-400">Name:</dt>
        <dd class="font-semibold">@Model.Name</dd>
        
        <dt class="text-gray-400">Location:</dt>
        <dd>@Model.Location</dd>
        
        <dt class="text-gray-400">Total Seats:</dt>
        <dd>@(Model.TotalRows * Model.SeatsPerRow)</dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="flex gap-4">
            <button type="submit" class="bg-red-600 hover:bg-red-700 px-6 py-2 rounded text-white font-semibold">Delete</button>
            <a href="/Admin/CinemaHalls" class="bg-gray-700 hover:bg-gray-600 px-6 py-2 rounded text-white font-semibold">Cancel</a>
        </div>
    </form>
</div>

