@model Movie
@{
    ViewData["Title"] = "Delete Movie";
}

<h1 class="text-3xl font-bold mb-6">Delete Movie</h1>

<div class="bg-gray-800 rounded-lg p-6 max-w-2xl">
    <h3 class="text-xl font-bold mb-4">Are you sure you want to delete this movie?</h3>
    <dl class="mb-6">
        <dt class="text-gray-400">Title:</dt>
        <dd class="font-semibold mb-2">@Model.Title</dd>
        <dt class="text-gray-400">Genre:</dt>
        <dd class="mb-2">@Model.Genre</dd>
        <dt class="text-gray-400">Release Date:</dt>
        <dd>@Model.ReleaseDate.ToString("MMM dd, yyyy")</dd>
    </dl>
    
    <form asp-action="Delete" method="post" class="flex gap-4">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="bg-red-600 hover:bg-red-700 px-6 py-2 rounded">Delete</button>
        <a href="/Admin/Movies" class="bg-gray-700 hover:bg-gray-600 px-6 py-2 rounded">Cancel</a>
    </form>
</div>

